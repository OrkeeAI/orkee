# Orkee Development Environment Configuration
# Copy to .env for local development

# Server Configuration
PORT=4001
NODE_ENV=development
RUST_LOG=debug
RUST_BACKTRACE=full
DEBUG=true

# TLS/SSL Configuration (disabled for easier development)
TLS_ENABLED=false
AUTO_GENERATE_CERT=true

# Security Settings (relaxed for development)
SECURITY_HEADERS_ENABLED=true
ENABLE_HSTS=false
RATE_LIMIT_ENABLED=true

# CORS Configuration (permissive for development)
CORS_ORIGIN=http://localhost:5173
CORS_ALLOW_ANY_LOCALHOST=true

# Directory Browsing (relaxed for development)
BROWSE_SANDBOX_MODE=relaxed
ALLOWED_BROWSE_PATHS=/app,/tmp,/Users

# Rate Limiting (generous for development)
RATE_LIMIT_GLOBAL_RPM=300
RATE_LIMIT_HEALTH_RPM=600
RATE_LIMIT_BROWSE_RPM=100
RATE_LIMIT_PROJECTS_RPM=200
RATE_LIMIT_BURST_SIZE=50

# Development Paths (local filesystem)
DATA_DIR=./dev-data
CERTS_DIR=./dev-certs
LOGS_DIR=./dev-logs

# Dashboard Development
VITE_API_URL=http://localhost:4001
VITE_HMR_HOST=localhost
VITE_PORT=5173

# Database Configuration (development database)
# DATABASE_URL=postgresql://orkee:orkee_dev@localhost:5432/orkee_dev
# POSTGRES_DB=orkee_dev
# POSTGRES_USER=orkee
# POSTGRES_PASSWORD=orkee_dev_password

# Redis Configuration (development Redis)
# REDIS_URL=redis://localhost:6379/1

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
ENABLE_PROFILING=false

# Monitoring & Logging (verbose for debugging)
LOG_LEVEL=debug
ENABLE_METRICS=false
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Development Performance (relaxed limits)
MAX_REQUEST_SIZE=104857600  # 100MB for testing large files
REQUEST_TIMEOUT=300         # 5 minutes for debugging
KEEP_ALIVE_TIMEOUT=120

# Development Features
ENABLE_MOCK_DATA=false
ENABLE_TEST_ENDPOINTS=true
SKIP_AUTH_IN_DEV=false

# Hot Reload Configuration
CARGO_WATCH_OPTIONS="--workdir packages/cli -x 'run --bin orkee -- dashboard'"
DASHBOARD_DEV_COMMAND="pnpm dev --filter=@orkee/dashboard --host 0.0.0.0"

# Development Database Seeding
SEED_SAMPLE_PROJECTS=true
ENABLE_DATABASE_RESET=true

# API Development
API_DOCS_ENABLED=true
CORS_ALLOW_CREDENTIALS=true
ENABLE_SWAGGER_UI=true