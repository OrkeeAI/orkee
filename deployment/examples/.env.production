# Orkee Production Environment Configuration
# Copy to .env and customize for your deployment

# Server Configuration
PORT=4001
NODE_ENV=production
RUST_LOG=info
RUST_BACKTRACE=1

# TLS/SSL Configuration
TLS_ENABLED=true
AUTO_GENERATE_CERT=false
TLS_CERT_PATH=/var/lib/orkee/certs/cert.pem
TLS_KEY_PATH=/var/lib/orkee/certs/key.pem

# Security Settings
SECURITY_HEADERS_ENABLED=true
ENABLE_HSTS=true
RATE_LIMIT_ENABLED=true

# CORS Configuration (replace with your domain)
CORS_ORIGIN=https://your-domain.com
CORS_ALLOW_ANY_LOCALHOST=false

# Directory Browsing Security
BROWSE_SANDBOX_MODE=strict
ALLOWED_BROWSE_PATHS=/var/lib/orkee/data

# Rate Limiting (production values)
RATE_LIMIT_GLOBAL_RPM=100
RATE_LIMIT_HEALTH_RPM=60
RATE_LIMIT_BROWSE_RPM=20
RATE_LIMIT_PROJECTS_RPM=30
RATE_LIMIT_BURST_SIZE=10

# Docker Volume Paths (customize as needed)
DATA_DIR=/var/lib/orkee/data
CERTS_DIR=/var/lib/orkee/certs
LOGS_DIR=/var/lib/orkee/logs

# Nginx Configuration (if using reverse proxy)
NGINX_LOGS_DIR=/var/log/nginx
LETSENCRYPT_DIR=/etc/letsencrypt
LETSENCRYPT_WWW_DIR=/var/www/certbot

# Database Configuration (uncomment if using PostgreSQL)
# DATABASE_URL=postgresql://orkee:secure_password@postgres:5432/orkee_prod
# POSTGRES_DB=orkee_prod
# POSTGRES_USER=orkee
# POSTGRES_PASSWORD=secure_password_here

# Redis Configuration (uncomment if using Redis)
# REDIS_URL=redis://redis:6379/0

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Backup Configuration (if implementing backup features)
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# External Service Integration (customize as needed)
# WEBHOOK_SECRET=your_webhook_secret_here
# NOTIFICATION_EMAIL=admin@your-domain.com

# Performance Tuning
MAX_REQUEST_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=65

# Domain Configuration (for Let's Encrypt)
DOMAIN=your-domain.com
EMAIL=admin@your-domain.com