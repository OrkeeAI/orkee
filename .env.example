# Server Configuration
PORT=4001                                             # CLI server port (default: 4001)

# Security Configuration (for local development)
CORS_ORIGIN="http://localhost:5173"                   # Frontend origin (validated against localhost whitelist)
CORS_ALLOW_ANY_LOCALHOST=true                        # Allow any localhost origin (development mode)

# Directory Browsing Security
ALLOWED_BROWSE_PATHS="~/Documents,~/Projects,~/Code,~/Desktop"  # Comma-separated list of allowed directories
BROWSE_SANDBOX_MODE=relaxed                           # Security mode: strict/relaxed/disabled

# TLS/HTTPS Configuration
TLS_ENABLED=false                                     # Enable HTTPS/TLS support
TLS_CERT_PATH="~/.orkee/certs/cert.pem"              # Path to TLS certificate file
TLS_KEY_PATH="~/.orkee/certs/key.pem"                # Path to TLS private key file
AUTO_GENERATE_CERT=true                               # Auto-generate self-signed certificates for development

# Rate Limiting
RATE_LIMIT_ENABLED=true                               # Enable rate limiting middleware
RATE_LIMIT_HEALTH_RPM=60                              # Health endpoint requests per minute
RATE_LIMIT_BROWSE_RPM=20                              # Directory browsing requests per minute
RATE_LIMIT_PROJECTS_RPM=30                            # Project operations requests per minute
RATE_LIMIT_PREVIEW_RPM=10                             # Preview operations requests per minute
RATE_LIMIT_GLOBAL_RPM=30                              # Global requests per minute for other endpoints
RATE_LIMIT_BURST_SIZE=5                               # Burst size multiplier

# Security Headers
SECURITY_HEADERS_ENABLED=true                         # Enable security headers middleware
ENABLE_HSTS=false                                     # Enable HSTS (set to true when using HTTPS)
ENABLE_REQUEST_ID=true                                # Enable request ID generation for audit logging

# Dashboard Configuration
VITE_API_URL="http://localhost:4001"                  # Backend API URL for dashboard (use https:// when TLS is enabled)

# Orkee Cloud Configuration (Optional)
# Sign up at https://orkee.ai to get your token
# Generate a token from your dashboard at https://app.orkee.ai/settings/tokens
ORKEE_CLOUD_TOKEN=orkee_abc123...
ORKEE_CLOUD_API_URL=https://api.orkee.ai
