{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orkee",
  "version": "0.0.9",
  "identifier": "ai.orkee.desktop",
  "build": {
    "beforeDevCommand": "node dev-wrapper.js",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "binaries/orkee"
    ],
    "copyright": "Copyright Â© 2024 Orkee AI",
    "shortDescription": "AI Agent Orchestration Platform",
    "longDescription": "Orkee is an AI agent orchestration platform featuring a Rust CLI server and React dashboard for monitoring and managing AI agents.",
    "linux": {
      "deb": {
        "depends": [],
        "postInstallScript": "linux/postinstall.sh",
        "preRemoveScript": "linux/preuninstall.sh"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerHooks": "windows/hooks.nsh"
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Orkee",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* https://api.orkee.ai; frame-src http://localhost:* http://127.0.0.1:*; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data: blob:; font-src 'self' data:; object-src 'none'; base-uri 'self'; form-action 'self';",
      "capabilities": [
        {
          "identifier": "http-all",
          "windows": ["main"],
          "permissions": [
            "http:default",
            {
              "identifier": "http:allow-fetch",
              "allow": [
                { "url": "http://localhost:*" },
                { "url": "http://127.0.0.1:*" },
                { "url": "https://api.orkee.ai" }
              ]
            },
            "http:allow-fetch-cancel",
            "http:allow-fetch-read-body",
            "http:allow-fetch-send",
            "notification:default",
            "notification:allow-is-permission-granted",
            "notification:allow-request-permission",
            "notification:allow-show"
          ]
        }
      ]
    }
  }
}
